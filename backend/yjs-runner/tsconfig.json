{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "app/src/**/*.ts",
    "modules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
