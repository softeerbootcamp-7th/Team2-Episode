<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- 탭 문자 금지 -->
    <module name="FileTabCharacter"/>

    <!-- 파일 끝 개행 -->
    <module name="NewlineAtEndOfFile"/>

    <!-- ✅ TrailingWhitespace 대신: 줄 끝 공백 금지 -->
    <module name="RegexpSingleline">
        <property name="format" value="\s+$"/>
        <property name="message" value="Trailing whitespace"/>
    </module>

    <!-- 한 줄 길이 -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^package\s|^import\s|https?://|ftp://"/>
    </module>

    <module name="TreeWalker">

        <module name="CustomImportOrder">
            <property name="customImportOrderRules"
                      value="THIRD_PARTY_PACKAGE###STANDARD_JAVA_PACKAGE###SPECIAL_IMPORTS###STATIC"/>

            <property name="specialImportsRegExp" value="com\.yat2\.episode"/>

            <property name="standardPackageRegExp" value="^(java|javax)\."/>

            <property name="sortImportsInGroupAlphabetically" value="true"/>

            <property name="separateLineBetweenGroups" value="true"/>
        </module>

        <!-- unused import -->
        <module name="UnusedImports"/>

        <!-- star import는 IntelliJ 쪽에서 임계값 올려서 금지할 거면 유지 -->
        <module name="AvoidStarImport"/>

        <!-- static import 금지: IntelliJ에 static group이 있으니 끔 -->
        <!-- <module name="AvoidStaticImport"/> -->

    </module>
</module>